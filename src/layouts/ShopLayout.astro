---
import MainLayout from './main/Layout.astro';

interface Props {
  title?: string;
}

const { title = 'Tienda Lyme - Productos de Calidad' } = Astro.props;
---

<MainLayout title={title}>
  <!-- Fondo actualizado con la nueva paleta de colores -->
  <div class="min-h-screen bg-gradient-to-br from-[#d4f1f9] via-[#f2f2f2] to-[#a8e6cf] shop-theme !important">
    <slot />
  </div>
</MainLayout>

<style is:global>
  /* Variables con la nueva paleta de colores */
  :root {
    /* Colores primarios */
    --lyme-primary-dark: #2a7a9f;
    --lyme-primary-medium: #3a8fb7;
    --lyme-primary-light: #5baed1;
    --lyme-primary-lighter: #d4f1f9;
    
    /* Colores secundarios */
    --lyme-secondary-dark: #8dd4b9;
    --lyme-secondary-medium: #a8e6cf;
    --lyme-secondary-light: #c4f0de;
    
    /* Colores de interfaz */
    --lyme-ui-background: #f2f2f2;
    --lyme-ui-card: #ffffff;
    --lyme-ui-border: #d4f1f9;
    
    /* Colores de texto */
    --lyme-text-primary: #333333;
    --lyme-text-secondary: #4a4a4a;
    --lyme-text-muted: #5c5c5c;
    
    /* Colores de estado */
    --lyme-state-success: #4CAF50;
    --lyme-state-warning: #FF9800;
    --lyme-state-danger: #F44336;
    --lyme-state-info: #2196F3;
  }

  /* Force theme for all shop pages with nueva palette */
  body {
    background-color: var(--lyme-ui-background) !important;
    color: var(--lyme-text-primary) !important;
  }
  
  /* Ensure all cards and UI elements have proper contrast */
  .card, .bg-white {
    background-color: var(--lyme-ui-card) !important;
    border-color: var(--lyme-ui-border) !important;
  }
  
  .bg-gray-100, .bg-gray-200 {
    background-color: var(--lyme-ui-background) !important;
  }
  
  /* Update text colors for better readability with new palette */
  .text-gray-700, .text-gray-800, .text-gray-900 {
    color: var(--lyme-text-primary) !important;
  }
  
  .text-black {
    color: var(--lyme-text-primary) !important;
  }
  
  .text-gray-500, .text-gray-600 {
    color: var(--lyme-text-secondary) !important;
  }
  
  /* Additional styles for consistent theming */
  .btn-primary, .bg-primary {
    background-color: var(--lyme-primary-medium) !important;
    border-color: var(--lyme-primary-medium) !important;
  }
  
  .btn-secondary, .bg-secondary {
    background-color: var(--lyme-secondary-medium) !important;
    border-color: var(--lyme-secondary-medium) !important;
  }
  
  .text-primary {
    color: var(--lyme-primary-medium) !important;
  }
  
  .text-secondary {
    color: var(--lyme-secondary-medium) !important;
  }
  
  /* Override espec√≠fico para elementos del ShopHome */
  .product-card {
    background-color: var(--lyme-ui-card) !important;
    border-color: var(--lyme-ui-border) !important;
  }
  
  /* Ensure inputs and form elements match the theme */
  input, select, textarea {
    background-color: var(--lyme-ui-card) !important;
    border-color: var(--lyme-ui-border) !important;
    color: var(--lyme-text-primary) !important;
  }
  
  input::placeholder, textarea::placeholder {
    color: var(--lyme-text-muted) !important;
  }
  
  /* Mantener el texto oscuro en los botones claros */
  .bg-[#d4f1f9], .bg-[#a8e6cf], .from-[#d4f1f9], .to-[#a8e6cf], 
  .bg-gradient-to-br.from-\[\#d4f1f9\] {
    color: var(--lyme-text-primary) !important;
  }
  
  /* Botones con fondo oscuro deben tener texto claro */
  .bg-[#3a8fb7], .bg-[#2a7a9f] {
    color: white !important;
  }
  
  /* Dialog/Modal styling */
  .dialog, .modal {
    background-color: var(--lyme-ui-card) !important;
    border-color: var(--lyme-ui-border) !important;
    color: var(--lyme-text-primary) !important;
  }
  
  /* Table styling */
  table {
    background-color: var(--lyme-ui-card) !important;
    color: var(--lyme-text-primary) !important;
  }
  
  th, td {
    border-color: rgba(58, 143, 183, 0.3) !important;
  }
  
  /* Shadow effects for modern look */
  .shadow, .shadow-sm, .shadow-md, .shadow-lg, .shadow-xl {
    --tw-shadow-color: rgba(58, 143, 183, 0.15) !important;
  }
  
  /* Ajustes para asegurar compatibilidad con ShopHome */
  .bg-gradient-to-r.from-\[\#00888A\].to-\[\#50C3AD\],
  .bg-gradient-to-r.from-\[\#00701A\].to-\[\#7CB342\] {
    background: linear-gradient(to right, var(--lyme-primary-medium), var(--lyme-secondary-medium)) !important;
  }
  
  /* Custom scrollbar para el tema */
  ::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }

  ::-webkit-scrollbar-track {
    background: var(--lyme-ui-background);
  }

  ::-webkit-scrollbar-thumb {
    background: var(--lyme-primary-medium);
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: var(--lyme-primary-dark);
  }
</style>