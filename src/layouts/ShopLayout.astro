---
import MainLayout from './main/Layout.astro';

interface Props {
  title?: string;
}

const { title = 'Lyme Shop - Productos de Calidad' } = Astro.props;
---

<MainLayout title={title}>
  <!-- Updated background with new color palette -->
  <div class="min-h-screen bg-gradient-to-br from-[#29696B] via-[#7AA79C] to-[#29696B] text-white !important">
    <slot />
  </div>
</MainLayout>

<style is:global>
  /* Force theme for all shop pages with new color palette */
  body {
    background-color: #29696B !important; /* Dark teal as fallback */
    color: #ffffff !important;
  }
  
  /* Ensure all cards and UI elements have proper contrast */
  .card, .bg-white, .bg-gray-100, .bg-gray-200 {
    background-color: rgba(145, 190, 173, 0.2) !important; /* #91BEAD with opacity */
    border-color: rgba(223, 239, 230, 0.2) !important; /* #DFEFE6 with opacity */
  }
  
  /* Update text colors for better readability with new palette */
  .text-gray-700, .text-gray-800, .text-gray-900, .text-black {
    color: #DFEFE6 !important; /* Light mint green */
  }
  
  /* Additional styles for consistent theming */
  .btn-primary, .bg-primary {
    background-color: #7AA79C !important; /* Teal green */
    border-color: #91BEAD !important; /* Medium sage green */
  }
  
  .text-primary {
    color: #DFEFE6 !important; /* Light mint green */
  }
  
  /* Ensure inputs and form elements match the theme */
  input, select, textarea {
    background-color: rgba(223, 239, 230, 0.1) !important;
    border-color: rgba(145, 190, 173, 0.4) !important;
    color: #DFEFE6 !important;
  }
  
  input::placeholder, textarea::placeholder {
    color: rgba(223, 239, 230, 0.5) !important;
  }
  
  /* Button styling */
  button, .button {
    background-color: #29696B !important;
    color: white !important;
  }
  
  button:hover, .button:hover {
    background-color: #7AA79C !important;
  }
</style>