---
import MainLayout from './main/Layout.astro';

interface Props {
  title?: string;
}

const { title = 'Lyme Shop - Productos de Calidad' } = Astro.props;
---

<MainLayout title={title}>
  <!-- Added !important to ensure the dark background is applied -->
  <div class="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900 text-white !important">
    <slot />
  </div>
</MainLayout>

<style is:global>
  /* Force dark theme for all shop pages */
  body {
    background-color: #0f172a !important; /* slate-900 as fallback */
    color: #ffffff !important;
  }
  
  /* Ensure all cards and UI elements have proper contrast */
  .card, .bg-white, .bg-gray-100, .bg-gray-200 {
    background-color: rgba(30, 41, 59, 0.8) !important; /* slate-800 with opacity */
  }
  
  /* Fix text colors to ensure readability */
  .text-gray-700, .text-gray-800, .text-gray-900, .text-black {
    color: #e2e8f0 !important; /* slate-200 */
  }
</style>