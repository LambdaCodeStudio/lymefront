---
import Layout from '../layouts/main/Layout.astro';
import { Navbar } from '../components/common/Navbar';
---

<Layout title="Dashboard">
  <Navbar client:load />
  <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
      <div class="border-4 border-dashed border-gray-200 rounded-lg h-96 p-4">
        <h1 class="text-2xl font-bold text-gray-900 mb-4">
          Bienvenido a tu Dashboard
        </h1>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="bg-white p-4 rounded-lg shadow">
            <h3 class="text-lg font-medium text-gray-900">Estadísticas</h3>
            <p class="mt-1 text-gray-500">Resumen de actividad</p>
          </div>
          <div class="bg-white p-4 rounded-lg shadow">
            <h3 class="text-lg font-medium text-gray-900">Actividad Reciente</h3>
            <p class="mt-1 text-gray-500">Últimas actualizaciones</p>
          </div>
          <div class="bg-white p-4 rounded-lg shadow">
            <h3 class="text-lg font-medium text-gray-900">Tareas Pendientes</h3>
            <p class="mt-1 text-gray-500">Lista de pendientes</p>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>