---
import ShopLayout from '../layouts/ShopLayout.astro';
import { OrdersWrapper } from '../components/shop/OrdersWrapper';
import { Footer } from '../components/common/Footer'
---

<ShopLayout title="Tienda Online - Mis Órdenes">
  <OrdersWrapper client:load />
  <Footer client:load />
</ShopLayout>

<style>
  /* Estilos específicos para órdenes usando la nueva paleta */
  :global(.order-item) {
    border-color: rgba(58, 143, 183, 0.3) !important;
    background-color: white !important;
    box-shadow: 0 4px 12px rgba(58, 143, 183, 0.1) !important;
    transition: transform 0.3s ease, box-shadow 0.3s ease !important;
  }
  
  :global(.order-item:hover) {
    transform: translateY(-3px) !important;
    box-shadow: 0 8px 20px rgba(58, 143, 183, 0.2) !important;
  }
  
  :global(.receipt-button) {
    background-color: #3a8fb7 !important;
    color: white !important;
    transition: all 0.3s ease !important;
  }
  
  :global(.receipt-button:hover) {
    background-color: #2a7a9f !important;
    box-shadow: 0 0 12px rgba(58, 143, 183, 0.6) !important;
  }
  
  :global(.orders-table) {
    background-color: white !important;
    border: 1px solid rgba(58, 143, 183, 0.3) !important;
    box-shadow: 0 4px 15px rgba(58, 143, 183, 0.15) !important;
  }

  /* Soporte para badges */
  :global(.badge-success) {
    background-color: rgba(168, 230, 207, 0.2) !important;
    color: #2a7a9f !important;
    border-color: #3a8fb7 !important;
  }

  :global(.badge-warning) {
    background-color: rgba(242, 165, 22, 0.2) !important;
    color: #F2A516 !important;
    border-color: #F2A516 !important;
  }

  :global(.badge-danger) {
    background-color: rgba(231, 76, 60, 0.2) !important;
    color: #E74C3C !important;
    border-color: #E74C3C !important;
  }

  /* Estilos específicos de estado de orden */
  :global(.status-pending) {
    border-left: 4px solid #F2A516 !important;
  }

  :global(.status-approved) {
    border-left: 4px solid #3a8fb7 !important;
  }

  :global(.status-rejected) {
    border-left: 4px solid #E74C3C !important;
  }
  
  /* Título con estilo moderno */
  :global(.orders-title) {
    color: #2a7a9f !important;
    font-weight: 700 !important;
    padding-bottom: 0.5rem !important;
    border-bottom: 2px solid #3a8fb7 !important;
    margin-bottom: 1.5rem !important;
    background: linear-gradient(90deg, #2a7a9f, #3a8fb7) !important;
    -webkit-background-clip: text !important;
    -webkit-text-fill-color: transparent !important;
  }
  
  /* Efecto para números de orden */
  :global(.order-number) {
    color: #3a8fb7 !important;
    font-weight: 700 !important;
  }
  
  /* Botón principal de acción */
  :global(.action-button) {
    background: linear-gradient(90deg, #3a8fb7, #5baed1) !important;
    color: white !important;
    border: none !important;
    transition: all 0.3s ease !important;
  }
  
  :global(.action-button:hover) {
    box-shadow: 0 0 15px rgba(58, 143, 183, 0.6) !important;
    transform: translateY(-2px) !important;
  }
  
  /* Paginación de órdenes */
  :global(.orders-pagination .page-item.active .page-link) {
    background-color: #3a8fb7 !important;
    border-color: #3a8fb7 !important;
  }
  
  :global(.orders-pagination .page-link) {
    color: #3a8fb7 !important;
    background-color: white !important;
  }
  
  :global(.orders-pagination .page-link:hover) {
    background-color: rgba(58, 143, 183, 0.1) !important;
    box-shadow: 0 0 8px rgba(58, 143, 183, 0.3) !important;
  }
  
  /* Botón de llamada a la acción destacado */
  :global(.cta-button) {
    background-color: #a8e6cf !important;
    color: #333 !important;
    font-weight: bold !important;
    border: none !important;
    transition: all 0.3s ease !important;
  }
  
  :global(.cta-button:hover) {
    background-color: #8dd4b9 !important;
    box-shadow: 0 0 15px rgba(168, 230, 207, 0.5) !important;
  }
</style>