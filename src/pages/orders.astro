---
import ShopLayout from '../layouts/ShopLayout.astro';
import { OrdersWrapper } from '../components/shop/OrdersWrapper';
import { Footer } from '../components/common/Footer'
---

<ShopLayout title="Tienda Lyme - Mis Ordenes">
  <OrdersWrapper client:load />
  <Footer client:load />
</ShopLayout>

<style>
  /* Additional orders-specific styling */
  :global(.order-item) {
    border-color: rgba(145, 190, 173, 0.3) !important;
  }
  
  :global(.receipt-button) {
    background-color: #29696B !important;
    color: white !important;
  }
  
  :global(.receipt-button:hover) {
    background-color: #7AA79C !important;
  }
  
  :global(.orders-table) {
    background-color: rgba(41, 105, 107, 0.2) !important;
    border: 1px solid rgba(145, 190, 173, 0.3) !important;
  }
</style>