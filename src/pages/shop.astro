---
import ShopLayout from '../layouts/ShopLayout.astro';
import { ShopWrapper } from '../components/shop/ShopWrapper';
import { Footer } from '../components/common/Footer'
---

<ShopLayout title="Tienda Online - Productos de Calidad">
  <ShopWrapper client:load />
  <Footer client:load />
</ShopLayout>

<style>
  /* Estilos adaptados a la nueva paleta de colores */
  :global(.product-grid) {
    background-color: #f2f2f2;
    border-radius: 0.75rem;
    box-shadow: 0 8px 32px rgba(58, 143, 183, 0.15);
    border: 1px solid rgba(58, 143, 183, 0.2);
  }
  
  :global(.hero-section) {
    border-color: rgba(58, 143, 183, 0.3);
    background: linear-gradient(135deg, #d4f1f9, #f2f2f2);
    box-shadow: 0 8px 32px rgba(58, 143, 183, 0.2);
  }
  
  /* Estilo de tarjetas de producto */
  :global(.product-card) {
    transition: transform 0.3s ease, box-shadow 0.3s ease !important;
    border-color: rgba(58, 143, 183, 0.2) !important;
    background-color: white !important;
    border-radius: 8px;
  }
  
  :global(.product-card:hover) {
    transform: translateY(-5px) !important;
    box-shadow: 0 10px 25px rgba(58, 143, 183, 0.25) !important;
  }
  
  /* Badges de categoría */
  :global(.product-card .category-badge) {
    background-color: #3a8fb7 !important;
    color: white !important;
    border-radius: 4px;
    padding: 3px 8px;
  }
  
  :global(.product-card .category-badge.maintenance) {
    background-color: #2a7a9f !important;
  }
  
  :global(.product-card .category-badge.cleaning) {
    background-color: #a8e6cf !important;
    color: #333333 !important;
  }
  
  /* Asegurar que los textos en el footer sean legibles */
  :global(footer) {
    background-color: #3a8fb7;
    border-top: 1px solid rgba(58, 143, 183, 0.3);
    color: white;
    margin-top: 2rem;
  }
  
  :global(footer a) {
    color: #d4f1f9;
    transition: color 0.3s ease;
  }
  
  :global(footer a:hover) {
    color: #f2f2f2;
    text-decoration: underline;
  }

  /* Estilo de paginación */
  :global(.pagination-container .page-item.active .page-link) {
    background-color: #3a8fb7 !important;
    border-color: #3a8fb7 !important;
    color: white !important;
  }
  
  :global(.pagination-container .page-link) {
    color: #3a8fb7 !important;
    background-color: white !important;
  }
  
  :global(.pagination-container .page-link:hover) {
    background-color: rgba(58, 143, 183, 0.1) !important;
    box-shadow: 0 0 8px rgba(58, 143, 183, 0.3) !important;
  }

  /* Asegurar que los elementos de búsqueda y filtro coincidan con el tema */
  :global(.search-container input) {
    background-color: white !important;
    border-color: #3a8fb7 !important;
    color: #333333 !important;
    box-shadow: 0 2px 5px rgba(58, 143, 183, 0.1);
  }

  :global(.search-container input::placeholder) {
    color: #5c5c5c !important;
  }
  
  /* Botones principales */
  :global(.btn-shop-primary) {
    background: linear-gradient(90deg, #3a8fb7, #5baed1) !important;
    border: none !important;
    color: white !important;
    transition: all 0.3s ease !important;
  }
  
  :global(.btn-shop-primary:hover) {
    box-shadow: 0 0 15px rgba(58, 143, 183, 0.6) !important;
    transform: translateY(-2px) !important;
  }
  
  /* Destacados y ofertas */
  :global(.featured-item) {
    background: linear-gradient(90deg, #3a8fb7, #a8e6cf) !important;
    border-radius: 0.5rem !important;
  }
  
  :global(.offer-item) {
    background: linear-gradient(90deg, #a8e6cf, #3a8fb7) !important;
    border-radius: 0.5rem !important;
    color: white !important;
  }
  
  /* Estilos adicionales para filtros */
  :global(.filter-dropdown) {
    background-color: white !important;
    border-color: rgba(58, 143, 183, 0.3) !important;
  }
  
  :global(.filter-dropdown:focus) {
    box-shadow: 0 0 0 3px rgba(58, 143, 183, 0.3) !important;
    border-color: #3a8fb7 !important;
  }
  
  /* Estilos para carrito de compras */
  :global(.cart-icon) {
    color: #3a8fb7 !important;
    transition: color 0.3s ease !important;
  }
  
  :global(.cart-icon:hover) {
    color: #2a7a9f !important;
  }
  
  :global(.cart-badge) {
    background-color: #a8e6cf !important;
    color: #333 !important;
  }
  
  /* Precio de productos */
  :global(.product-price) {
    color: #3a8fb7 !important;
    font-weight: bold !important;
  }
  
  :global(.product-price-discount) {
    color: #E74C3C !important;
  }
</style>